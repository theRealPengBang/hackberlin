{
  "name": "hackberlin",
  "version": "1.0.0",
  "description": "we do things",
  "main": "index.js",
  "scripts": {
    "serve": "node dist/server/index.js",
    "build:server": "babel ./src/server/ -d ./dist/server/",
    "bs": "npm run build && npm run serve",
    "build:client": "test -d dist/public || mkdir -p dist/public && cp -rf ./src/client/templates/* ./dist/public/",
    "build": "npm run build:server && npm run build:client",
    "build:js": "browserify -e frontend/src/js/app.js -o laravel/public/assets/js/app.js -t [ babelify --presets [ es2015 ] ]",
    "build:css": "node-sass frontend/src/scss/app.scss --sourceMapEmbed | postcss -u autoprefixer -o laravel/public/assets/css/app.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theRealPengBang/hackberlin.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/theRealPengBang/hackberlin/issues"
  },
  "homepage": "https://github.com/theRealPengBang/hackberlin#readme",
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "express": "^4.14.0",
    "socket.io": "^1.7.1",
    "watchify": "^3.7.0"
  }
}
